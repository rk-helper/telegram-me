# Telegram Me Configuration
# Add these to ~/.claude/settings.json under "env"

# Telegram Bot Token (required)
# Get from @BotFather on Telegram
CALLME_TELEGRAM_BOT_TOKEN=your-bot-token-here

# Telegram Chat ID (required)
# Get by messaging your bot, then visiting:
# https://api.telegram.org/botYOUR_TOKEN/getUpdates
CALLME_TELEGRAM_CHAT_ID=your-chat-id-here

# Response timeout in milliseconds (optional, default: 180000 = 3 minutes)
# CALLME_RESPONSE_TIMEOUT_MS=180000
